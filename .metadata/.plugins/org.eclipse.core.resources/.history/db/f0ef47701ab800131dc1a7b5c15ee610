package com.pseudocoloring.lut;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.InputStream;
import java.net.URL;

public class LUTReader {
	
	private BufferedReader bufferReader;
	
	public LUTReader(String lutFile) throws FileNotFoundException{
		ClassLoader classloader = Thread.currentThread().getContextClassLoader();
		URL url = classloader.getResource("luts/"+ lutFile + ".lut");
		bufferReader = new BufferedReader(new FileReader(url.toString()));
	
	}
}
